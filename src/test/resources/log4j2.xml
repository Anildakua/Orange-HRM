<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
       <Properties>
<Property name="basePath">./logs</Property>
</Properties>
 
  <Appenders>
      <RollingFile name="RollingFile" fileName="${basePath}/prints.log" filePattern="${basePath}/prints-%d{yyyy-MM-dd}.log">
     <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
		<SizeBasedTriggeringPolicy size="500 KB"/>
          </RollingFile>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
  <Logger name="TestScripts.AdminAcc" level="trace" additivity="false">
    <AppenderRef ref="RollingFile"/>
    <AppenderRef ref="Console"/>
</Logger>
<Logger name="TestScripts.EmployeeAcc" level="trace" additivity="false">
    <AppenderRef ref="RollingFile"/>
    <AppenderRef ref="Console"/>
</Logger>
<Logger name="TestScripts.ApplyLeave" level="trace" additivity="false">
    <AppenderRef ref="RollingFile"/>
    <AppenderRef ref="Console"/>
</Logger>
    <Root level="trace">
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>
</Configuration>
